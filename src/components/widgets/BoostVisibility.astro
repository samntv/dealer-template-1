---
import { Icon } from "astro-icon/components";

interface Feature {
  title?: string;
  description?: string;
  icon?: string;
}

interface Props {
  title?: string;
  description?: string;
  image?: string;
  ctaText?: string;
  ctaLink?: string;
  features: Feature[];
}

const {
  title,
  description,
  image,
  ctaText,
  ctaLink,
  features = [],
} = Astro.props;
---

<section class="py-16 md:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12">
      {
        title && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {title}
          </h2>
        )
      }
      {description && <p class="text-xl text-gray-600">{description}</p>}
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      {
        image && (
          <div class="relative overflow-hidden rounded-lg shadow-lg">
            <img
              src={image}
              alt={title || "Digital Marketing Solutions"}
              class="w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
        )
      }

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {
          features.map((feature) => (
            <div class="p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-lg transition">
              {feature.icon && (
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                  <Icon name={feature.icon} class="w-6 h-6 text-blue-600" />
                </div>
              )}
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {feature.title}
              </h3>
              <p class="text-gray-600 text-sm">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>

    {
      ctaText && ctaLink && (
        <div class="text-center mt-12">
          <a
            href={ctaLink}
            class="inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition"
          >
            {ctaText}
          </a>
        </div>
      )
    }
  </div>
</section>
