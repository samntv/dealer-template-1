---
export interface Props {
  sectionData: {
    section: string;
    title: string;
    description: string;
    image?: string;
    ctaText?: string;
    ctaLink?: string;
    features?: Array<{
      title: string;
      description: string;
      image?: string;
      icon?: string;
    }>;
  };
  variant?: 'hero' | 'overview' | 'features' | 'value-proposition' | 'default';
  className?: string;
}

const { sectionData, variant = 'default', className = '' } = Astro.props;
const { title, description, image, ctaText, ctaLink, features } = sectionData;

// Determine section styling based on variant
const getSectionClasses = (variant: string) => {
  const baseClasses = 'py-12 md:py-16 lg:py-20';
  
  switch (variant) {
    case 'hero':
      return `${baseClasses} bg-gradient-to-br from-blue-50 to-indigo-100`;
    case 'overview':
      return `${baseClasses} bg-gray-50`;
    case 'value-proposition':
      return `${baseClasses} bg-blue-50`;
    case 'features':
      return `${baseClasses} bg-white`;
    default:
      return `${baseClasses} bg-white`;
  }
};

const getContainerClasses = (variant: string) => {
  return 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8';
};

const getLayoutClasses = (variant: string, hasImage: boolean) => {
  if (!hasImage && variant !== 'features') {
    return 'text-center max-w-4xl mx-auto';
  }
  
  if (variant === 'features') {
    return 'w-full';
  }
  
  return 'grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center';
};
---

<section class={`${getSectionClasses(variant)} ${className}`}>
  <div class={getContainerClasses(variant)}>
    {variant === 'features' ? (
      <div class="w-full">
        <!-- Features Header -->
        <div class="text-center max-w-3xl mx-auto mb-12 lg:mb-16">
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 lg:mb-6">
            {title}
          </h2>
          <p class="text-base sm:text-lg md:text-xl text-gray-600">
            {description}
          </p>
        </div>

        <!-- Features Grid -->
        {features && features.length > 0 && (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 lg:gap-8">
            {features.map((feature) => (
              <div class="p-4 lg:p-6 rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-lg transition-all duration-200">
                {feature.image && (
                  <div class="mb-4">
                    <img
                      src={feature.image}
                      alt={feature.title}
                      class="w-full h-40 sm:h-48 object-cover rounded-lg"
                      loading="lazy"
                      width="300"
                      height="200"
                    />
                  </div>
                )}
                {feature.icon && !feature.image && (
                  <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                    <span class="text-xl sm:text-2xl">{feature.icon}</span>
                  </div>
                )}
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">
                  {feature.title}
                </h3>
                <p class="text-sm sm:text-base text-gray-600">
                  {feature.description}
                </p>
              </div>
            ))}
          </div>
        )}

        <!-- Features CTA -->
        {ctaText && ctaLink && (
          <div class="text-center mt-8 lg:mt-12">
            <a
              href={ctaLink}
              class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 text-sm md:text-base"
              aria-label={`${ctaText} - ${title}`}
            >
              {ctaText}
              <svg class="ml-2 w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        )}
      </div>
    ) : (
      <div class={getLayoutClasses(variant, !!image)}>
        <!-- Content Column -->
        <div class={image ? 'lg:order-1' : 'w-full'}>
          {variant === 'hero' ? (
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 lg:mb-6 leading-tight">
              {title}
            </h1>
          ) : (
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 lg:mb-6">
              {title}
            </h2>
          )}
          
          <p class={`text-gray-600 mb-6 lg:mb-8 ${
            variant === 'hero' 
              ? 'text-lg sm:text-xl md:text-2xl' 
              : 'text-base sm:text-lg md:text-xl'
          }`}>
            {description}
          </p>
          
          {ctaText && ctaLink && (
            <div class={image ? 'text-left' : 'text-center'}>
              <a 
                href={ctaLink}
                class="inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 text-sm md:text-base"
                aria-label={`${ctaText} - ${title}`}
              >
                {ctaText}
                <svg class="ml-2 w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          )}
        </div>
        
        <!-- Image Column -->
        {image && (
          <div class={`lg:order-2 w-full ${variant === 'overview' ? 'lg:order-first' : ''}`}>
            <div class="relative overflow-hidden rounded-lg shadow-lg">
              <img 
                src={image}
                alt={`${title} illustration`}
                class="w-full h-auto object-cover transition-transform duration-300 hover:scale-105"
                loading="lazy"
                width="600"
                height="400"
              />
              <!-- Overlay for better visual effect -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </div>
        )}
      </div>
    )}
  </div>
</section>

<style>
  /* Responsive typography scaling */
  @media (max-width: 640px) {
    h1, h2 {
      line-height: 1.2;
    }
  }
  
  /* Smooth transitions for interactive elements */
  a, img {
    transition: all 0.3s ease;
  }
  
  /* Focus styles for accessibility */
  a:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Optimize for print media */
  @media print {
    section {
      break-inside: avoid;
      page-break-inside: avoid;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .text-gray-600 {
      color: #374151;
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>