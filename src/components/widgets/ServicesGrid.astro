---
import { Icon } from "astro-icon/components";

interface Card {
  title?: string;
  description?: string;
  icon?: string;
  link?: string;
}

interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
  cards: Card[];
}

const { title, description, ctaText, ctaLink, cards = [] } = Astro.props;
---

<section class="py-16 md:py-24 bg-primary-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      (title || description) && (
        <div class="text-center max-w-3xl mx-auto mb-12">
          {title && (
            <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
          )}
          {description && (
            <p class="text-xl text-neutral mb-8">{description}</p>
          )}
          {ctaText && ctaLink && (
            <a
              href={ctaLink}
              class="inline-flex items-center justify-center px-6 py-3 bg-white text-primary-dark font-medium rounded-lg hover:bg-neutral transition"
            >
              {ctaText}
            </a>
          )}
        </div>
      )
    }

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-12">
      {
        cards.map((card) => (
          <a
            href={card.link || "#"}
            class="p-6 bg-primary rounded-lg hover:bg-primary-light transition group"
          >
            {card.icon && (
              <div class="w-12 h-12 bg-primary-light rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-lighter transition">
                <Icon name={card.icon} class="w-6 h-6 text-white" />
              </div>
            )}
            <h3 class="text-xl font-semibold mb-2">{card.title}</h3>
            <p class="text-neutral-dark">{card.description}</p>
          </a>
        ))
      }
    </div>
  </div>
</section>
