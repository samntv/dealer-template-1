---
interface Props {
  title?: string;
  eyebrow?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
  image?: string;
  keyPoints?: string[];
}

const {
  title,
  eyebrow,
  description,
  ctaText,
  ctaLink,
  image,
  keyPoints = [],
} = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        {
          eyebrow && (
            <p class="text-blue-600 font-semibold text-sm uppercase tracking-wide mb-4">
              {eyebrow}
            </p>
          )
        }
        {
          title && (
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              {title}
            </h2>
          )
        }
        {description && <p class="text-lg text-gray-600 mb-6">{description}</p>}
        {
          keyPoints.length > 0 && (
            <ul class="space-y-3 mb-8">
              {keyPoints.map((point) => (
                <li class="flex items-start">
                  <svg
                    class="w-6 h-6 text-blue-600 mr-2 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span class="text-gray-700">{point}</span>
                </li>
              ))}
            </ul>
          )
        }
        {
          ctaText && ctaLink && (
            <a
              href={ctaLink}
              class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition"
            >
              {ctaText}
            </a>
          )
        }
      </div>
      {
        image && (
          <div class="relative overflow-hidden rounded-lg shadow-lg">
            <img
              src={image}
              alt={title || "Venue Network"}
              class="w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
        )
      }
    </div>
  </div>
</section>
