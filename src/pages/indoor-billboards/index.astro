---
import { getCollection } from 'astro:content';
import PageLayout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const billboards = await getCollection('indoor-billboards');
const sorted = billboards.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const metadata = {
  title: 'Indoor Billboards - Your Brand',
  description: 'Premium indoor billboard advertising solutions',
};
---

<PageLayout metadata={metadata}>
  <Hero
    title="Premium Indoor Billboards"
    subtitle="Reach your audience with high-impact indoor billboard advertising in premium locations"
  />

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sorted.map(item => (
          <a href={`/indoor-billboards/${item.slug}`} class="p-6 border border-gray-200 rounded-lg hover:border-blue-300 hover:shadow-lg transition">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{item.data.title}</h3>
            <p class="text-gray-600">{item.data.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CallToAction />
</PageLayout>
