---
import { getCollection } from "astro:content";
import PageLayout from "~/layouts/PageLayout.astro";

const solutions = await getCollection("solutions");
const brandingAwareness = solutions
  .filter((s) => s.data.category === "branding-awareness")
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const metadata = {
  title: "Branding & Awareness Solutions",
  description:
    "Expand your reach with our branding and awareness advertising solutions.",
};
---

<PageLayout metadata={metadata}>
  <div class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="mb-12 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Branding & Awareness
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Expand your reach and build brand recognition with our comprehensive
          advertising solutions.
        </p>
      </header>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          brandingAwareness.map((solution) => (
            <a
              href={`/solutions/branding-awareness/${solution.slug.replace("branding-awareness/", "")}`}
              class="group block p-6 bg-white rounded-xl shadow-md hover:shadow-xl transition-all"
            >
              <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary transition">
                {solution.data.title}
              </h3>
              <p class="text-gray-600">{solution.data.description}</p>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</PageLayout>
