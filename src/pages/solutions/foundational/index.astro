---
import { getCollection } from 'astro:content';
import PageLayout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const solutions = await getCollection('solutions');
const foundational = solutions.filter(s => s.data.category === 'foundational').sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const metadata = {
  title: 'Foundational Services - Your Brand',
  description: 'Build a strong foundation for your digital presence',
};
---

<PageLayout metadata={metadata}>
  <Hero
    title="Foundational Services"
    subtitle="Essential services to establish and strengthen your online presence"
  />

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {foundational.map(item => (
          <a href={`/solutions/foundational/${item.slug}`} class="p-6 border border-gray-200 rounded-lg hover:border-blue-300 hover:shadow-lg transition">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{item.data.title}</h3>
            <p class="text-gray-600">{item.data.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CallToAction />
</PageLayout>
